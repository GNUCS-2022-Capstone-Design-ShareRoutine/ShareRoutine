<resources>
    <!-- Base application theme. -->
    <style name="Theme.ShareRoutine" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/share_routine_theme_cream_pink</item>
        <item name="colorPrimaryVariant">@color/share_routine_theme_cream_pink_light</item>
        <item name="colorOnPrimary">@color/share_routine_theme_cloud</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="Theme.ShareRoutine.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ShareRoutine.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.ShareRoutine.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Font. -->
    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/maplestory_bold</item>
    </style>
    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="fontFamily">@font/maplestory_bold</item>
    </style>
</resources>