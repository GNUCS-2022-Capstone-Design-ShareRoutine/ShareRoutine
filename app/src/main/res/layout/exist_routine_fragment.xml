<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.routine.manage.exist.ExistRoutineFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/exist_routine_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/exist_routine_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exist_routine_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_confirm"
        android:textSize="24sp"
        android:fontFamily="@font/maplestory_bold"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_check"
        app:iconGravity="textStart"
        app:iconSize="28dp"
        app:layout_constraintTop_toBottomOf="@id/exist_routine_recycler_view"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>