<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/used_todo_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/used_todo_description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/used_todo_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/used_todo_time"
            app:layout_constraintEnd_toStartOf="@id/used_todo_importance" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/used_todo_importance"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:gravity="center"
            app:layout_constraintStart_toEndOf="@id/used_todo_description"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>